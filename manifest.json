{
  "manifest_version": 2,
  "name": "Readfile by HuyDZ",
  "short_name": "Readfile",
  "description": "Readfile online by HuyLV",
  "version": "0.0.1",
  "minimum_chrome_version": "38",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "assets/review-icon.png",
    "128": "assets/review-icon.png",
    "48": "assets/review-icon.png"
  },
  "browser_action": {
    "default_icon": "assets/review-icon.png",
    "default_popup": "popup.html" 
  },
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  }
}